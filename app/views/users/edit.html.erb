<h1 class="mb-4 ms-3">プロフィール編集</h1>

<div class="ms-3">
  <%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>

    <div class="mb-3 row">
      <%= form.label :name, "name", class: "col-sm-2 col-form-label text-end" %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>


    <div class="mb-3 row">
      <%= form.label :email, "Email", class: "col-sm-2 col-form-label text-end" %>
      <div class="col-sm-10">
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>


    <div class="mb-3 row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <%= form.submit "更新" %>
      </div>
    </div>
  <% end %>
</div>