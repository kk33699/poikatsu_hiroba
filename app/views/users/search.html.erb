<h1>ユーザー検索</h1>

<!-- ユーザー検索機能 -->
<%= form_with url: search_users_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query], placeholder: "ユーザー名を入力" %>
  <%= submit_tag "検索" %>
<% end %>

<% if params[:query].present? %>
  <h2>ユーザー検索結果</h2>
<% else %>
  <h2>ユーザー一覧</h2>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
    </li>
  <% end %>

  <%= link_to "マイページへ", mypage_users_path %>
</ul>