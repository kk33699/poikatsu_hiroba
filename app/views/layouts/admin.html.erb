<!DOCTYPE html>
<html>
<head>
  <title>ポイ活広場管理者画面</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-success">
    <div class="container-fluid">
      <span class="navbar-brand">ポイ活広場管理者画面</span>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <% if admin_signed_in? %>
            <li class="nav-item"><%= link_to "管理者用ユーザー一覧", admin_users_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "管理者用レビュー一覧", admin_reviews_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %></li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="flash-message">
    <%= flash[:notice] %>
  </div>

  <div class="flash-message">
    <%= flash[:alert] %>
  </div>

  <div class="container mt-4">
    <%= yield %>
  </div>
</body>
</html>
